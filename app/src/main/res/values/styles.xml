<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- AR Screen Theme (need for overlayed action bar) -->
    <style name="ARScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ARScreenActionbar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!--compatibility-->
        <item name="actionBarStyle">@style/ARScreenActionbar</item>
        <item name="windowActionBarOverlay">true</item>
    </style>
    <style name="ARScreenActionbar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/transparentBlack</item>
        <!--compatibility-->
        <item name="background">@color/transparentBlack</item>
    </style>

</resources>
