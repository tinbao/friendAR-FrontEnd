            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline14"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="134dp"
            app:layout_constraintHorizontal_bias="1.0" />

